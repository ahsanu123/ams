{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "ams",
  "version": "0.2.0",
  "identifier": "ah.ah.ams",
  "build": {
    "beforeDevCommand": "yarn dev:tauri",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "yarn build:tauri",
    "frontendDist": "../build/client"
  },
  "app": {
    "windows": [
      {
        "title": "ams",
        "width": 1366,
        "height": 768
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources" : [
      "ams.sqlite",
      ".env"
    ]
  },
  "tauri": {
      "allowlist": {
          "window": {
              "setFullscreen": true
          }
      }
  }
}
