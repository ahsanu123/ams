set $mod Mod4
bindsym $mod+Shift+q  exec swaymsg exit 

default_border none 
default_floating_border none

bar {
  mode invisible
}

exec systemctl --user import-environment SWAYSOCK WAYLAND_DISPLAY XDG_RUNTIME_DIR

exec_always --no-startup-id sh -c 'sleep 85 && swaymsg "[title="ams"] fullscreen enable"'

exec_always --no-startup-id GDK_DPI_SCALE=1.15 ~/ams-root/ams  --production-mode

