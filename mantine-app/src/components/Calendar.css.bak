.user-information {
  sub {
    width: 100%;
    display: block;
    background-color: beige;
  }
}

.calendar {
  min-width: 950px;

  button {
    min-height: 60px;
    font-size: 1.5em;
  }

  .calendar-flex {
    align-items: center;
    padding: 10px 0;
    gap: 30px;

    .calendar-navigation {
      column-gap: 20px;
    }
  }
}

.calendar-heading {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 10px 0px;

  >div {
    display: flex;
    align-items: center;
    column-gap: 10px;
  }

  select {
    border: 1.5px black solid;
    margin: 0;
  }

  h5 {
    margin: 0;
  }

}

.ams-calendar {
  max-width: 550px;
  display: grid;
  grid-template-columns: repeat(7, 1fr);
  gap: 10px;

  .component {
    border: solid 1px gray;
    border-radius: 3px;
    min-height: 80px;

    .item-cell {
      display: flex;
      flex-wrap: wrap;
      min-height: 100px;
      justify-content: space-between;
      flex-direction: column;
    }
  }

  p {
    padding: 0;
    margin: 0;
  }

  button {
    height: 60px;
    padding: 15px 0px;
    font-size: 1.5em;
  }

}
